{
    "scripts": {
        "prepare": "husky install"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ],
        "rules": {
            "type-enum": [
                2,
                "always",
                [
                    "bug",
                    "feat",
                    "fix",
                    "docs",
                    "style",
                    "refactor",
                    "test",
                    "chore",
                    "revert",
                    "merge"
                ]
            ]
        }
    },
    "devDependencies": {
        "husky": "^7.0.4",
        "@commitlint/cli": "^16.2.1",
        "@commitlint/config-conventional": "^16.2.1"
    }
}
